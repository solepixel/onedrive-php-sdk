{
    "name": "krizalys/onedrive-php-sdk",
    "description": "OneDrive SDK for PHP.",
    "homepage": "https://github.com/krizalys/onedrive-php-sdk",
    "license": "BSD-3-Clause",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "keywords": [
        "krizalys",
        "onedrive",
        "php",
        "sdk"
    ],
    "authors": [
        {
            "name": "Christophe Vidal",
            "homepage": "http://www.krizalys.com/"
        }
    ],
    "support": {
        "email": "support@krizalys.com",
        "issues": "https://github.com/krizalys/onedrive-php-sdk/issues",
        "wiki": "https://github.com/krizalys/onedrive-php-sdk/wiki",
        "source": "https://github.com/krizalys/onedrive-php-sdk"
    },
    "require": {
        "php": "^7.2",
        "guzzlehttp/guzzle": "^6.3.3",
        "microsoft/microsoft-graph": "^1.7.0"
    },
    "require-dev": {
        "brianium/paratest": "^3.0.0",
        "facebook/webdriver": "^1.7.0",
        "phpunit/phpunit": "^8.0.0",
        "symfony/process": "^3.4.1"
    },
    "autoload": {
        "psr-4": {
            "Krizalys\\Onedrive\\": "src/"
        }
    },
    "scripts": {
        "test:unit": "vendor/bin/phpunit --configuration test/unit",
        "test:unit:parallel": "vendor/bin/paratest --configuration=test/unit/phpunit.xml.dist",
        "test:unit:coverage": "vendor/bin/phpunit --configuration test/unit --coverage-clover coverage.xml",
        "test:unit:coverage:parallel": "vendor/bin/paratest --configuration=test/unit/phpunit.xml.dist --coverage-clover=coverage.xml",
        "test:functional": "vendor/bin/phpunit --configuration test/functional",
        "test:functional:parallel": "vendor/bin/paratest --functional --configuration=test/functional/phpunit.xml.dist test/functional/KrizalysOnedriveTest.php & vendor/bin/paratest --functional --configuration=test/functional/phpunit.xml.dist test/functional/ClientTest.php & vendor/bin/paratest --functional --configuration=test/functional/phpunit.xml.dist test/functional/Proxy/DriveProxyTest.php & vendor/bin/paratest --functional --configuration=test/functional/phpunit.xml.dist test/functional/Proxy/DriveItemProxyTest.php & wait"
    },
    "config": {
        "platform": {
            "ext-zip": "1.12.5"
        }
    }
}
